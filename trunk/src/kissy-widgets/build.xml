<?xml version="1.0" encoding="utf-8"?>
<project name="kissy-widgets.build" default="build" basedir=".">
    <description>Component Build File</description>

    <import file="../build.xml"/>

    <property file="build.properties"/>
    <property name="src.dir" location="."/>

    <target name="concat">
        <concat destfile="kissy-base.js" encoding="${charset}" outputencoding="${charset}">
            <path path="../kissy/kissy.js"/>
            <path path="../datalazyload/datalazyload.js"/>
            <path path="../widget/widget.js"/>
            <path path="../widget-switchable/switchable.js"/>
            <path path="../widget-switchable/plugin-autoplay.js"/>
            <path path="../widget-switchable/plugin-effect.js"/>
            <path path="../suggest/suggest.js"/>
        </concat>
    </target>

    <target name="clean">
        <delete file="kissy-widgets.js"/>
    </target>

    <target name="build" depends="concat,common.build,clean">
    </target>
</project>
